<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content shadow-lg">
            {{ form_start(form, {
                'attr': {'id': 'createForm'},
                'action': path('web_user_create'),
                'method': 'POST'
            }) }}

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Créer un utilisateur</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }} 
                            {{ form_errors(form.firstname) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.encrypte, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.encrypte) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.genre, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.genre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.rgpd, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_errors(form.rgpd) }}
                    </div>

                    {% if form.role is defined %}
                        <div class="mb-3">
                            {{ form_row(form.role, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.role) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelCreateUserBtn" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-success">Créer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
