{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block stylesheets %}
<style>
    .icon-sm {
        width: 1em;
        height: 1em;
        vertical-align: middle;
        margin-right: 5px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-center mb-0">{{ ux_icon('bi:people', { class: 'icon-sm' }) }} Liste des Utilisateurs</h1>
        <a href="{{ path('web_homepage') }}" class="btn btn-secondary">
            {{ ux_icon('bi:arrow-left', { class: 'icon-sm' }) }} Retour 
        </a>
    </div>

    <div class="row">
        {% for user in users %}
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.firstname }} {{ user.lastname }}</h5>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">Aucun utilisateur enregistr√©.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
