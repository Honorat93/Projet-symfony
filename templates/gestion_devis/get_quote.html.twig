{% extends 'base.html.twig' %}

{% block title %}Informations du Devis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            margin-bottom: 0;
        }

        .icon-sm {
            width: 1em;
            height: 1em;
            vertical-align: middle;
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary mb-0">{{ ux_icon('bi:info-circle', { class: 'icon-sm' }) }} Informations du Devis</h1>
        <a href="{{ path('quote_home') }}" class="btn btn-outline-secondary">
            {{ ux_icon('bi:arrow-left', { class: 'icon-sm' }) }} Retour
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body bg-light">
                    {{ form_start(form, {'method': 'GET'}) }} 

                        {% for field in [form.title, form.description, form.amount, form.clientFirstname, form.clientLastname, form.clientEmail] %}
                            <div class="mb-3">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control', 'readonly': true}}) }}
                                {{ form_errors(field) }}
                            </div>
                        {% endfor %}

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date de cr√©ation</label>
                            <input type="text" class="form-control" value="{{ quote.createdAt|date('Y-m-d H:i:s') }}" readonly>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
